@model pharm.Models.Medicine_Information

@{
    ViewBag.Title = "Delete";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('Access Denied') ; window.location.href='/Medicine/Index'</script>");
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}

<div>
    <h2>&nbspDelete Medicine Details</h2>

    <hr width="99%">

    <h3>&nbsp&nbspAre you sure you want to delete this?</h3>
</div>

<table align="center" border="1" id="datatable" class="table table-condensed table-striped table-bordered table-hover display compact">
    <tr>
        <td>Medicine Name</td>
        <td> @Html.DisplayFor(model => model.Medicine_Name)</td>
    </tr>
    <tr>
        <td>Category</td>
        <td> @Html.DisplayFor(model => model.Category)</td>
    </tr>
    <tr>
        <td>Generic Name</td>
        <td> @Html.DisplayFor(model => model.Drug_Generic_name.Genric_Name)</td>
    </tr>
    <tr>
        <td>Manufacturer</td>
        <td> @Html.DisplayFor(model => model.Manufacturer.Manufacturer_Name)</td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class = "btn btn-success btn-md"  />
}

<div>
    &nbsp @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning  btn-md" })
</div>

