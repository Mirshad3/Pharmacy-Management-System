@model pharm.Models.Drug_Generic_name

@{
    ViewBag.Title = "Details";

    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutStaff.cshtml";
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}

<h2>&nbspDrug Generic Name Details</h2>

<hr width="99%">

<table border="1"  id="datatable" class="table table-condensed table-striped table-bordered table-hover display compact">

    <tr>
        <td>ID</td>
        <td> @Html.DisplayFor(model => model.ID)</td>
    </tr>

    <tr>
        <td>Genric Name</td>
        <td> @Html.DisplayFor(model => model.Genric_Name)</td>
    </tr>
    <tr>
        <td>Description</td>
        <td> @Html.DisplayFor(model => model.Description)</td>
    </tr>

</table>

<p>
    &nbsp&nbsp  @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary btn-md" })  
