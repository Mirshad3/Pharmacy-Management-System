@model pharm.Models.Supplier

@{
    ViewBag.Title = "Delete";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Supplier/Index'</script>");

        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}

<div>
    <h2>&nbspDelete Supplier Details</h2>

    <hr width="99%">

    <h3>&nbsp&nbspAre you sure you want to delete this?</h3>
</div>

<table align="center" border="1" id="datatable" class="table table-condensed table-striped table-bordered table-hover display compact">
    <tr>
        <td>Supplier Name</td>
        <td> @Html.DisplayFor(model => model.Supplier_Name)</td>
    </tr>
    <tr>
        <td>Contact</td>
        <td> @Html.DisplayFor(model => model.Contact)</td>
    </tr>
    <tr>
        <td>Email</td>
        <td> @Html.DisplayFor(model => model.Email)</td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class = "btn btn-primary btn-md"  />
}

<div>
    &nbsp @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
</div>

