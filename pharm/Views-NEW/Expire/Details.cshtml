@model IEnumerable<pharm.Models.Batch>

@{
    ViewBag.Title = "Details";

    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutStaff.cshtml";
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}
<h2>&nbspManufacturer Details</h2>
<hr width="99%">
<table align="center" border="1" id="datatable" class="table table-condensed table-striped table-bordered table-hover display compact">
    <tr>
        <td>ID</td>
        <td> @Html.DisplayFor(model => model.First().ID)</td>
    </tr>
    <tr>
        <td>Medicine_Name</td>
        <td>
            @Html.DisplayFor(model => model.First().Medicine_Information.Medicine_Name)
           
            </td>
    </tr>
    <tr>
        <td>Genric_Name</td>
        <td> @Html.DisplayFor(model => model.First().Medicine_Information.Drug_Generic_name.Genric_Name)</td>
    </tr>
    <tr>
        <td>Expire_Date</td>
        <td>    @Convert.ToString(string.Format("{0:dd-MM-yyyy}", Model.First().Expire_Date))</td>
    </tr>
    <tr>
        <td>Production_Date</td>
        <td>  @Convert.ToString(string.Format("{0:dd-MM-yyyy}", Model.First().Production_Date)) </td>
    </tr>
    <tr>
        <td>Quantity</td>
        <td> @Html.DisplayFor(model => model.First().Quantity)</td>
    </tr>
    <tr>
        <td>Manufacturer_Name</td>
        <td> @Html.DisplayFor(model => model.First().Medicine_Information.Manufacturer.Manufacturer_Name)</td>
    </tr>
    <tr>
        <td>Category</td>
        <td> @Html.DisplayFor(model => model.First().Medicine_Information.Category)</td>
    </tr>
</table>
<p>
    &nbsp&nbsp
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning  btn-md" })
</p>
