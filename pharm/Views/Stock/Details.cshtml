@model pharm.Models.Batch

@{
    ViewBag.Title = "Batch Details";
    ViewBag.SubTitle = "Stock";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutStaff.cshtml";
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}


<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal box box-primary">

            <table align="center" border="1" id="datatable" class="table table-condensed table-striped table-bordered table-hover display compact">
                <tr>
                    <td>Medicine Name</td>
                    <td> @Html.DisplayFor(model => model.Medicine_Information.Medicine_Name)</td>
                </tr>
                <tr>
                    <td>Batch ID</td>
                    <td> @Html.DisplayFor(model => model.Batch_ID)</td>
                </tr>
                <tr>
                    <td>Quantity</td>
                    <td> @Html.DisplayFor(model => model.Quantity)</td>
                </tr>
                <tr>
                    <td>Cost Price</td>
                    <td> @Html.DisplayFor(model => model.Cost_Price)</td>
                </tr>
                <tr>
                    <td>Sell Price</td>
                    <td> @Html.DisplayFor(model => model.Sell_Price)</td>
                </tr>
                <tr>
                    <td>Production Date</td>
                    <td> @Html.DisplayFor(model => model.Production_Date)</td>
                </tr>
                <tr>
                    <td>Expire Date</td>
                    <td>  @Html.DisplayFor(model => model.Expire_Date)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        &nbsp&nbsp  @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary btn-md" })
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                    </td>
                </tr>

            </table>

        </div>
    </div>

</div>
 