@model pharm.Models.Batch
@{
    ViewBag.Title = "Edit";
    ViewBag.SubTitle = "Stock";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Stock/Index'</script>");
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}
<h2>&nbspEdit Batch Information</h2>
<hr width="99%">

<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal box box-primary">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

            <table align="center" border="1" id="datatable" class="table table-condensed table-striped table-bordered table-hover display compact">
                <tr align="right">
                    <td>Batch ID</td>
                    <td>
                        @Html.TextBoxFor(model => model.Batch_ID, new { @class = "form-control", @readonly = "readonly" })
                    </td>
                </tr>
                <tr align="right">
                    <td>Sell Price</td>
                    <td>
                        @Html.TextBoxFor(model => model.Sell_Price, new { style = @class = "form-control" })
                    </td>
                    <td align="left">@Html.ValidationMessageFor(model => model.Sell_Price, null, new { style = "color:red" })</td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        &nbsp  @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                        &nbsp  <input type="submit" id="Update" value="Update" class="btn btn-success " />
                    </td>
                    <td></td>
                </tr>
            </table>


            }
        </div>
    </div>

</div>
 
<br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
