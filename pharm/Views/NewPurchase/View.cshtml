<script>

       $(document).ready(function(){
    $("#btnView").click(function(){
        $("#viewitem").show();
        $("#additem").hide();
        $("#priceitem").hide();
    });
         $("#btnNext").click(function(){
        $("#viewitem").hide();
        $("#additem").hide();
