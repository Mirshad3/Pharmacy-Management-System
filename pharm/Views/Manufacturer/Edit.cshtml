@model pharm.Models.Manufacturer

@{
    ViewBag.Title = "Edit";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Manufacturer/Index'</script>");
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}

<h2>&nbspEdit Manufacturer</h2>

<hr width="99%">

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<table align="center" border="1" id="datatable" class="table table-condensed table-striped table-bordered table-hover display compact">

    <tr align="right">
        <td>Manufacturer ID</td>
        <td>
            @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @readonly = "readonly" })
        </td>
    </tr>
    <tr align="right">
        <td>Manufacturer Name</td>
        <td>
            @Html.TextBoxFor(model => model.Manufacturer_Name, new { @class = "form-control" })
        </td>
        <td align="left">@Html.ValidationMessageFor(model => model.Manufacturer_Name, null, new { style = "color:red" })</td>
    </tr>
    <tr align="right">
        <td>Details</td>
        <td>
            @Html.TextBoxFor(model => model.Details, new { @class = "form-control" })
        </td>
        <td align="left">@Html.ValidationMessageFor(model => model.Details, null, new { style = "color:red;" })</td>
    </tr>
    <tr>
        <td></td>
        <td></td>
        <td>
            &nbsp  @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning  btn-md" })
            &nbsp; <input type="submit" value="Update" class="btn btn-success" />
        </td>

    </tr>
</table>
}
 
<br />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
