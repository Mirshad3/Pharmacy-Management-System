@model pharm.Models.Drug_Generic_name

@{
    ViewBag.Title = "Edit";

    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('Access Denied') ; window.location.href='/DrugGenericName/Index'</script>");
        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}

<h2>&nbspEdit Drug Generic Name</h2>

<hr width="99%">

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

   <table align="center" border="1" id="datatable" class="table table-condensed table-striped table-bordered table-hover display compact">

        <tr align="right">
            <td>Generic Name ID</td>
            <td>
                @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @readonly = "readonly" })
            </td>
        </tr>

        <tr align="right">
            <td>Generic Name</td>
            <td>
                @Html.TextBoxFor(model => model.Genric_Name, new { @class = "form-control" })
            </td>
            <td align="left">@Html.ValidationMessageFor(model => model.Genric_Name, null, new { style = "color:red" })</td>
        </tr>

        <tr align="right">
            <td>Description</td>
            <td>
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
            </td>
            <td align="left">@Html.ValidationMessageFor(model => model.Description, null, new { style = "color:red" })</td>
        </tr>

        <tr>
            <td></td>
            <td>
                &nbsp  @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning  btn-md" })
                &nbsp <input type="submit" value="Update" class="btn btn-success btn-md" />
            </td>
        </tr>

    </table>

}

