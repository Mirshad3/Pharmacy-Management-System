@model pharm.Models.Supplier
@{
    ViewBag.Title = "Edit Supplier Details";
    ViewBag.SubTitle = "Suppliers";
    if (Session["Usertype"] != null)
    {
        if (Session["Usertype"].ToString() == "Admin")
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Supplier/Index'</script>");

        }
    }
    else
    {
        Response.Write("<script>alert('You dont have permission to access this page') ; window.location.href='/Login/Login'</script>");
    }
}


<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal box box-primary">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <table align="center" border="1" id="datatable" class="table table-condensed table-striped table-bordered table-hover display compact">
                    <tr align="right">
                        <td><div class="col-sm-6 col-form-label">Supplier Name</div></td>
                        <td>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.Supplier_Name, new { @class = "form-control" })
                            </div>
                        </td>
                        <td align="left">@Html.ValidationMessageFor(model => model.Supplier_Name, null, new { style = "color:red" })</td>
                    </tr>
                    <tr align="right">
                        <td><div class="col-sm-6 col-form-label">Contact</div></td>
                        <td>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.Contact, new { @class = "form-control" })</div>
                        </td>
                        <td align="left">@Html.ValidationMessageFor(model => model.Contact, null, new { style = "color:red" })</td>
                    </tr>
                    <tr align="right">
                        <td><div class="col-sm-6 col-form-label">Email</div></td>
                        <td>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                            </div>
                        </td>
                        <td align="left">@Html.ValidationMessageFor(model => model.Email, null, new { style = "color:red" })</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            &nbsp  @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-warning" })
                            &nbsp  <input type="submit" id="btnSubmit" value="Update" class="btn btn-success " />
                        </td>
                        <td></td>
                    </tr>

                </table>


            }


        </div>
    </div>

</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
